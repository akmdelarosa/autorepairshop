<div class='table-scrollable'>
<table
       data-ng-show="slots.length > 0"
       class="table table-striped table-hover">
  <tr class="success">
    <td>Time</td>
    <td>Duration</td>
    <td>Slots</td>
    <td>&nbsp;</td>
  </tr>

  <tr data-ng-repeat="slot in slots">
    <td>{{slot.time}}</td>
    <td>{{slot.duration}}</td>
    <td>{{slot.slots}}</td>
    <td class="info">
      <!-- single button -->
        <div class="btn-group">
          <button type="button" class="btn btn-default dropdown-toggle" data-toggle="dropdown" aria-expanded="false">
            Schedule<span class="caret"></span>
          </button>
          <ul class="dropdown-menu" role="menu">
            <li><a href="/createAppointment/{{slot.id}}">Schedule Category</a></li>
          </ul>
        </div>
    </td>
  </tr>
</table>
</div>