<% include ../layout %>

<div class="container">
  <div class="row">
    <h2>Appointment Confirmation</h2><br />

    <div class="row">
      <div class="col-sm-12">
        <p>Thank you for scheduling an appointment with Angel's Auto Repair Shop. Please confirm your appointment details below and click schedule when you're done.</p><br />
        <div class="well">

          <p><strong>Name: </strong>{{appointment.first_name}} {{appointment.last_name}}</p>
          <p><strong>Email: </strong>{{appointment.email}}</p>
          <p><strong>Phone: </strong>{{appointment.phone_number}}</p>

          <br />

          <p><strong>Year: </strong>{{appointment.year}}</p>
          <p><strong>Make: </strong>{{appointment.make}}</p>
          <p><strong>Model: </strong>{{appointment.model}}</p>

          <br />

          <p><strong>Date: </strong>{{appointment.date}}</p>
          <p><strong>Time: </strong>{{appointment.time}}</p>

          <br />

          <p><strong>Requested services:</strong></p>
          <ul>
            <li ng-repeat="selectedService in appointment.services">{{selectedService.name}}</li>
          </ul>

        </div>
      </div>
    </div>

  </div>

</div><!-- end of appointment details-->