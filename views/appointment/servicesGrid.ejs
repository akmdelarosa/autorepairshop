<div class='table-scrollable'>
<table
       data-ng-show="services.length > 0"
       class="table table-striped table-hover">
  <tr class="success">
    <td>Service Name</td>
    <td>Details</td>
    <td>&nbsp;</td>
  </tr>

  <tr data-ng-repeat="service in services">
    <td>{{service.name}}</td>
    <td>{{service.description}}</td>
    <td class="info">
      <!-- single button -->
        <div ng-click="updateService(service.id)" class="btn-group">
          <button type="button" class="btn btn-default" aria-expanded="false">
            Select
          </button>
        </div>
    </td>
  </tr>
</table>
</div>