<div class="col-sm-12">
    <div class="well">
        <h3><span class="fa fa-user"></span> Vehicles</h3>
		<div class='table-scrollable' style="max-height: 250px;">
			<table
			       data-ng-show="vehicles.length > 0"
			       class="table table-striped table-hover">
			  <tr class="success">
			    <td>Year</td>
			    <td>Make</td>
			    <td>Model</td>
				<td>Last Serviced</td>
			    <td>Last Pedometer Read</td>
			  </tr>

			  <tr data-ng-repeat="vehicle in vehicles">
				<td>{{vehicle.year}}</td>
			    <td>{{vehicle.make}}</td>
			    <td>{{vehicle.model}}</td>
			    <td>{{vehicle.last_serviced | date:'MM/dd/yyyy'}}</td>
				<td>{{vehicle.mileage_read}}</td>
			  </tr>
			</table>
			<p ng-hide="vehicles.length > 0"> No vehicles found.</p>
		</div>
    </div>
</div>