<% include ../../adminLayout %>

<div class="panel panel-info">
  <div style="float: right; padding-top: 4px; padding-right: 15px;">
    <% if (user) { %>
    <a href="/admin/logout" class="btn btn-default btn-sm">Logout</a>
    <% } %>
    <a href="/admin/index" class="btn btn-default btn-sm">Back To Home</a>
  </div>

  <div class="clear"></div>

  <div class="panel-heading">
    <h3 class="panel-title"><%=title %></h3>
  </div>
  

  <div class="panel-body" data-ng-app="adminServiceModule" data-ng-controller="adminRemoveServiceController">

      <div class="col-sm-12">
        <div class="well">
            <a href="/admin/services/createService" class="btn btn-warning" style="float: right;">Create New Service</a>
            <h3><span class="fa fa-wrench"></span> Services</h3>
            <div class="clear"></div>
            <div class='table-scrollable' style="max-height: 600px;">
                <table
                    class="table table-striped table-hover">
                <tr class="success">
                    <td>Service Name</td>
                    <td>Description</td>
                    <td>Category</td>
                    <td>&nbsp;</td>
                </tr>
                
                <% services.forEach(function(service) {%>
                <tr>
                    <td><%=service.name%></td>
                    <td><%=service.description%></td>
                    <td><%=service.category%></td>
                    <td class="info">
                        <a href="/admin/services/edit/<%=service.id%>" class="btn btn-default" style="width: 100%;">
                            Edit
                        </a>
                    </td>
                    <td>
                        <button ng-click="markDeleted(<%=service.id%>)" class="btn btn-danger" style="width: 100%;">
                            Remove
                        </button>
                    </td>
                </tr>
                <% }) %>
                </table>
                <% if (typeof services == 'undefined') { %>
                    <p> No services found.</p>
                <% } %>
            </div>
        </div>
    </div>
  </div>
</div>

<% include ../../footer %>