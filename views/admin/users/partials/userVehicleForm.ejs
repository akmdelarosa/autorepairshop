<h3><span class="fa fa-user"></span> Vehicles</h3>
<div class='table-scrollable' style="max-height: 600px;">
    <table
        class="table table-striped table-hover">
    <tr class="success">
        <td>Year</td>
        <td>Make</td>
        <td>Model</td>
        <td>Mileage</td>
        <td>&nbsp;</td>
    </tr>
    
    <% vehicles.forEach(function(vehicle) {%>
    <tr>
        <td><%=vehicle.year%></td>
        <td><%=vehicle.make%></td>
        <td><%=vehicle.model%></td>
        <td><%=vehicle.mileage_read%></td>
        <td>
            <button ng-click="removeVehicle(<%=userProfile.id%>,<%=vehicle.id%>)" class="btn btn-danger" style="width: 100%;">
                Remove
            </button>
        </td>
    </tr>
    <% }) %>
    </table>
    <% if (typeof vehicles == 'undefined') { %>
        <p> No vehicles found.</p>
    <% } %>
</div>